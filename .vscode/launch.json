  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "update pm2 app",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bin/eactl",
      "args": [
        "update",
        "pm2app",
        "ace2-monitor-api.eamode.com",
        "../../ace2/ace2-monitor-api/",
        "-e",
        "mode"
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "no args",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bin/eactl",
      "args": [],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "create website",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bin/eactl",
      "args": [
        "create",
        "website",
        "ea.eamode.cloud",
        "../mode/mode-ui-exp/dist/mode-ui-exp/",
        "-e",
        "mode"
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "update nginx",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bin/eactl",
      "args": ["update", "nginx", "-e", "mode"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "update website",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/bin/eactl",
      "args": [
        "update",
        "website",
        "ea.eamode.cloud",
        "../mode/mode-ui-exp/dist/mode-ui-exp/",
        "-e",
        "mode"
      ],
      "console": "integratedTerminal"
    }
  ]
}
